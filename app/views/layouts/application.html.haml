!!!5
%head
  %title Tr&egrave;s Bijoux
  =stylesheet_link_tag 'style'
  =javascript_include_tag 'jquery'
  =javascript_include_tag 'application'
%body
  #header
    %h1 Tr&egrave;s Bijoux
    #links
      %ul
        -if user_signed_in?
          %li=link_to('Logout', destroy_user_session_path) if user_signed_in?
          %li=link_to('Edit registration', edit_user_registration_path) if user_signed_in?
        -else
          %li=link_to('Login', new_user_session_path)
          %li=link_to('Register', new_user_registration_path)  
  -if flash[:notice]
    %p.flash=flash[:notice]
  -if flash[:alert]
    %p.flash=flash[:alert]
  =yield
